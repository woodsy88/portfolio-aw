<div class="row">
  <% object.each do |skill| %>
  <div class="col-md-6 d-flex">
    <div class="card skill-card" style="width: 100%"> 
      <div class="card-body flex-fill">
      <h3 class="header-7 spacing-xs"><%= link_to skill.title, skill_path(skill) %></h3>
          <div class="skill-container">
                  <div class="small-font-skills">
                    <%  if skill.jobs.any?  %>
                    <i class="fas fa-briefcase skill-icon"></i>
                    <%= link_to pluralize(skill.jobs.count, "job"), skill_path(skill) %>
                    <% end %>
                  </div> 
                  <div class="small-font-skills">
                    <%  if skill.portfolios.any?  %>
                      <i class="fas fa-desktop skill-icon"></i>
                      <%= link_to pluralize(skill.portfolios.count, "project"), skill_path(skill) %>
                    <% end %>
                  </div> 
                  <div class="small-font-skills">
                    <%  if skill.blogs.any?  %>
                      <i class="fas fa-book-alt skill-icon"></i>
                      <%= link_to pluralize(skill.blogs.count, "resource"), skill_path(skill) %>
                    <% end %>
                  </div> 

          </div>
      </div>
            <% if logged_in?(:site_admin) %>
            <div class="card-footer">
              <span class="pull-right">
                <%= link_to fa_icon('pencil-square-o'), edit_skill_path(skill)  %>
                <%= link_to fa_icon('trash'), skill, method: :delete, data: { confirm: 'Are you sure you want to delete this post' }  %>
                <%= link_to 'Destroy', skill, data: { behavior: 'delete' } %>
              </span>
            </div>
            <% end %>
      </div>   
    </div>
  <% end %>
</div>  
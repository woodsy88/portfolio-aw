<div class="container section-padding">
<%= link_to 'View All Jobs', jobs_path, class: "btn btn-outline-primary spacing-sm" %>
  <div class="row">
    <div class="col-md-12 d-flex" style="width: 100%;">
          <div class="card p-4">
              <div class="card-body">
                 <%= react_component("Job", { 
                                              company: @job.company,
                                              website: @job.website,
                                              title: @job.job_title,
                                              start_date: @job.start_date,
                                              end_date: @job.end_date,
                                              currently_active: @job.current,
                                              body: truncate(@job.body, length: 200),
                                              job_skills: @job.skills,
                                              path: job_path(@job),
                                                  }) %>
              </div>
            <div class="card-footer">
              <span class="pull-right">
                <%= link_to fa_icon('pencil-square-o'), edit_job_path(@job) if logged_in?(:site_admin) %>
                <%= link_to fa_icon('trash'), @job, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } if logged_in?(:site_admin) %>
              </span>
            </div>          
          </div>
    </div>
  </div>
</div>


<div class="container section-padding">
<%= link_to 'View All Jobs', jobs_path, class: "btn btn-outline-primary spacing-sm" %>
  <div class="row">
    <div class="col-md-12 d-flex" style="width: 100%;">
          <div class="card p-4">
              <div class=" card-body flex-fill">
                  <h2><%= @job.company  %></h2>
                  <h3><%= @job.job_title %></h3>
                  <p><%= @job.body %></p>
          
                    <% if @job.skills.any? %>
                    <% @job.skills.each do |skill| %>
                         <%= render partial: "skills/skill", locals: {skill: skill} %>
                      <% end %>
                    <% end %>  

              <% if @job.portfolios.any? %>
 <div class="m-3">
                 <h3>Applications I worked on</h3>
                 <div class="row">
                    <% @job.portfolios.each do |portfolio| %>
                     <div class="border border-info m-2 p-3"> 
                        <%= link_to portfolio.title %>
                      </div>
                    <% end %>
                 </div>
 </div>
              <% end %>
              </div>
            <div class="card-footer">
              <span class="pull-right">
                <%= link_to fa_icon('pencil-square-o'), edit_job_path(@job) if logged_in?(:site_admin) %>
                <%= link_to fa_icon('trash'), @job, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } if logged_in?(:site_admin) %>
              </span>
            </div>
          </div>
    </div>
  </div>
</div>


<% if flash[:alert]  %>
   <%= js add_gritter(flash[:alert], title: "Please pay attention", sticky: false, time: 1000) %>
<% elsif flash[:error]  %>
   <%= js add_gritter(flash[:error], title: "Please pay attention", sticky: false, time: 1000) %>
<% else %>
   <%= js add_gritter(flash[:notice], title: "Please pay attention", sticky: false, time: 1000) %>
<% end %>
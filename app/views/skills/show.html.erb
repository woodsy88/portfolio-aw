<div class="container section-padding-lg">

  <div class="header-1 spacing-md"><%= @skill.title %></div>

    <% if @skill.jobs.count != 0 %>
    <div class="spacing-xl">
    <h2 class="header-4">Job's containing <%= @skill.title %></h2>
        <div class="row">
          <% @skill.jobs.each do |job| %> 
            <div class="col-md-4 d-flex">
              <div class="card skill-show-card m-3" style="width: 100%;">
                <div class="card-body flex-fill">
                  <%= link_to job.company, job_path(job), class: "header-6" %>
                </div>
              </div>
            </div> 
          <% end %> 
        </div> 
    </div> 
    <% end %>

    <% if @skill.portfolios.count != 0 %> 
      <div class="spacing-xl">
        <h2 class="spacing-lg">Portfolio items containing <%= @skill.title %></h2>
        <div class="row">
          <% @skill.portfolios.each do |portfolio_item| %>
              <div class="col-md-4 d-flex">
                <div class="card skill-show-card" style="width: 100%;">
                  <div class="card-body flex-fill">
                    <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item), class: "header-5" %>
                  </div>    
                </div>
              </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @skill.blogs.count != 0 %>
    <h2 class="spacing-lg">Releases containing <%= @skill.title %></h2>
      <div class="row">
            <% @skill.blogs.each do |blog| %>
              <div class="col-md-4 d-flex">
                  <div class="card skill-show-card" style="width: 100%;">
                    <div class="card-body">              
                          <%= link_to blog.title, blog_path(blog), class: "header-5" %>
                    </div>
                  </div>    
              </div>                               
            <% end %>
      </div>
      </div>  
    <% end %>
</div>
<div class="container">
  <% if @skill.blogs.count == 0 && @skill.jobs.count == 0 && @skill.portfolios.count == 0 %>
    <p class="text-muted">There does not seem to be any projects, jobs, or portfolios with <%= @skill.title %></p>
    <%= link_to 'View all skills', skills_path, class: "btn btn-primary" %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@skill, :html => {class: "form-horizontal", 
                                        role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :title %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control", 
              placeholder: "Enter skill", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :percent_utilized %>
        </div>
        <div class="col-md-8">
          <%= f.number_field :percent_utilized, class: "form-control", 
              placeholder: "Enter skill", autofocus: true %>
        </div>
      </div>



      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
<%= f.submit(@skill.new_record? ? "Add skill" : "Update skill",
                          class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request and return to hockey tips listing", 
                                              root_path %> ]
    </div>
  </div>
</div>
<div class="container section-padding-sm">
  <div class="row">
    <div class="col-md-12">
      <div class="card" style="width: 100%;">
        <div class="card-body">
          <h2 class="card-title">Skill</h2>
          <%= form_for(@skill, :html => {class: "form-horizontal", 
                                              role: "form"}) do |f| %>
          <div class="form-group">
            <div class="control-label col-md-2">
              <%= f.label :title %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :title, class: "form-control", 
                    placeholder: "Enter skill", autofocus: true %>
            </div>
          </div>

          <div class="form-group">
            <div class="control-label col-md-2">
              <%= f.label :percent_utilized %>
            </div>
            <div class="col-md-8">
              <%= f.number_field :percent_utilized, class: "form-control", 
                    placeholder: "Enter skill", autofocus: true %>
            </div>
          </div>

          <%= render partial: 'area', locals: { f: f } %>

          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <%= f.submit(@skill.new_record? ? "Add skill" : "Update skill",
                                class: "btn btn-primary btn-lg btn-xlarge") %>
            </div>
          </div>
          <% end %>
          <div class="col-md-4 col-md-offset-4 colormatch">
            [ <%= link_to "Cancel", 
                                                    root_path %> ]
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_tag do %>
analytics.track("Visited Skill form", {
user: "<%= current_user.name %>"
});
<% end %>